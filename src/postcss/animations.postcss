@keyframes expand {
    0%, 80% {
        letter-spacing: -17px;
        opacity: 0;
    }
    100% {
        letter-spacing: 0;
        opacity: 1;
    }
}
@keyframes star {
    0%, 80% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}
@keyframes bounce-open {
    0%,80% {
        opacity: 0;
        transform: translateX(150px);
    }
    90% {
        transform: translateX(-10px);
    }
    100% {
        opacity: 1;
        transform: translateX(0);
    }
}
@keyframes bounce-close {
    0%,80% {
        opacity: 0;
        transform: translateX(-150px);
    }
    90% {
        transform: translateX(10px);
    }
    100% {
        opacity: 1;
        transform: translateX(0);
    }
}
@keyframes grow {
    0% {
        max-width: 100%;
        max-height: 100%;
        top: 0;
    }
    100%Â {
        max-width: 130%;
        max-height: 130%;
        top: -15%;
    }
}
@keyframes shrink {
    0% {
        width: 100vw;
        height: 100vh;
        border-radius: 0 0 0 0;
        transform: translate(0, 0);
    }
    100% {
        width: 75vw;
        height: 75vh;
        border-radius: 50px 5px;
        top: 50vh;
        left: 50vw;
        box-shadow: 0 0 0 4px $color--primary;
        border: 1px dotted $color--secondary;
        transform: translate(-37.5vw, -37.5vh);
    }
}
